<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="backgroundColor" format="color" />


    <declare-styleable name="Button">
        <attr name="buttonClass" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="success" value="2" />
            <enum name="danger" value="3" />
            <enum name="warning" value="4" />
            <enum name="info" value="5" />
            <enum name="light" value="6" />
            <enum name="dark" value="7" />
            <enum name="link" value="8" />
        </attr>
        <attr name="buttonType" format="enum">
            <enum name="rounded" value="0" />
            <enum name="pill" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="buttonFill" format="enum">
            <enum name="solid" value="0" />
            <enum name="outline" value="1" />
        </attr>
        <attr name="buttonShadow" format="enum">
            <enum name="elevated" value="0" />
            <enum name="flat" value="1" />
        </attr>
        <attr name="backgroundColor" />
        <attr name="textColor" />
        <attr name="buttonFont" format="enum" >
            <enum name="didact" value="0"/>
            <enum name="montserrat" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="textClass" format="enum">
            <enum name="h1" value="0" />
            <enum name="h2" value="1" />
            <enum name="h3" value="2" />
            <enum name="h4" value="3" />
            <enum name="h5" value="4" />
            <enum name="h6" value="5" />
            <enum name="subtitle1" value="6" />
            <enum name="subtitle2" value="7" />
            <enum name="body1" value="8" />
            <enum name="body2" value="9" />
            <enum name="caption" value="10" />
        </attr>
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="textFont" format="enum" >
            <enum name="didact" value="0"/>
            <enum name="montserrat" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="drawableLeft" format="reference" />
        <attr name="prefix" format="string" />
        <attr name="suffix" format="string" />
        <attr name="text" format="string" />
        <attr name="hint" format="string" />
        <attr name="layoutColor" format="color" />
        <attr name="layoutOutlineFillColor" format="color" />
        <attr name="endIconMode" format="enum">
            <enum name="password" value="0" />
            <enum name="clearText" value="1" />
        </attr>
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="hintTextColor" format="color" />
        <attr name="prefixTextColor" format="color" />
        <attr name="suffixTextColor" format="color" />
        <attr name="inputType" format="enum">
            <enum name="text" value="0x00000001" />
            <enum name="textPassword" value="0x00000081" />
            <enum name="number" value="0x00000002" />
            <enum name="numberPassword" value="0x00000012" />
            <enum name="none" value="0x00000000" />
            <enum name="numberDecimal" value="0x00002002" />
            <enum name="numberSigned" value="0x00001002" />
            <enum name="phone" value="0x00000003" />
            <enum name="textCapCharacters" value="0x00001001" />
            <enum name="textCapSentences" value="0x00004001" />
            <enum name="textCapWords" value="0x00002001" />
            <enum name="textEmailAddress" value="0x00000021" />
        </attr>
        <attr name="layoutType" format="enum">
            <enum name="rounded" value="0" />
            <enum name="pill" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="layoutFill" format="enum">
            <enum name="solid" value="0" />
            <enum name="outline" value="1" />
        </attr>
        <attr name="drawableLeftColor" format="color" />
        <attr name="drawableRightColor" format="color" />
        <attr name="gravity" format="flags">
            <flag name="center" value="0x11" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
        </attr>
        <attr name="layoutHeight" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="label" format="string" />
        <attr name="labelColor" format="color" />
        <attr name="labelSize" format="dimension" />
        <attr name="singleLine" format="boolean" />
        <attr name="enabled" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CheckBox">

    </declare-styleable>
    <declare-styleable name="RadioButton">

    </declare-styleable>
    <declare-styleable name="ToggleButton">

    </declare-styleable>
    <declare-styleable name="ProgressBar">

    </declare-styleable>
    <declare-styleable name="Spinner">
        <attr name="dropdownColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="Container">
        <attr name="type" format="enum">
            <enum name="rounded" value="0" />
            <enum name="pill" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="fill" format="enum">
            <enum name="solid" value="0" />
            <enum name="outline" value="1" />
        </attr>
        <attr name="outlineColor" format="color" />
        <attr name="fillColor" format="color"/>
    </declare-styleable>
</resources>